import React from "react";
import { View, ScrollView, TouchableOpacity, StyleSheet } from "react-native";
import { Cloud, Book, Map, Fish, Bot } from "lucide-react-native"; 

export default function MainScreen() {
  const kategorien = [
    { name: "Wetter", icon: <Cloud size={28} color="#fff" /> },
    { name: "Fangbuch", icon: <Book size={28} color="#fff" /> },
    { name: "Start Fishing", icon: <Fish size={28} color="#fff" /> },
    { name: "Karte", icon: <Map size={28} color="#fff" /> },
    { name: "KI Buddy", icon: <Bot size={28} color="#fff" /> },
  ];

  return (
    <View style={styles.container}>
      <ScrollView 
        horizontal
        showsHorizontalScrollIndicator={false}
        contentContainerStyle={styles.scrollContent}
      >
        {kategorien.map((kat, index) => (
          <TouchableOpacity key={index} style={styles.button}>
            {kat.icon}
          </TouchableOpacity>
        ))}
      </ScrollView>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    height: 80,
    backgroundColor: "#111",
    paddingVertical: 10,
  },
  scrollContent: {
    alignItems: "center",
    paddingHorizontal: 10,
  },
  button: {
    backgroundColor: "#333",
    padding: 12,
    borderRadius: 20,
    marginRight: 12,
    justifyContent: "center",
    alignItems: "center",
  },
});